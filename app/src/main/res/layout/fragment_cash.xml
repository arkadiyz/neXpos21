<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arkadiy.enter.imenu.Fragments.CashFragment"
    android:background="@color/colorListView"
    android:id="@+id/fragment_cash"
    android:windowSoftInputMode="stateHidden"
    android:orientation="vertical"

    >

    <EditText
        android:id="@+id/textViewTotal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorCash"
        android:focusable="false"
        android:focusableInTouchMode="false"

        android:textAlignment="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewTotal"
        android:layout_marginTop="50dp"
        android:rowCount="3"
        android:columnCount="1"
        android:gravity="center"
        android:id="@+id/gridLayoutCash"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"

            >

            <ImageButton
                android:id="@+id/imageButtonTwoHundred"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/twohundred"
                android:layout_marginRight="5dp"
                />

            <ImageButton
                android:id="@+id/imageButtonOneHundred"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/hundredshekel"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonFifty"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/fiftyshekel"/>

            <ImageButton
                android:id="@+id/imageButtonTwenty"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/twentyshekel"
                android:layout_marginRight="5dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/imageButtonTen"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/ten"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonFive"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/five"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonTwo"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/two"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonOne"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/one"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/imageButtonHalf"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/hetsi"
                android:layout_marginRight="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonTenAgorot"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/tenagorot"
                android:layout_marginRight="5dp"/>



        </LinearLayout>
    </GridLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutCalc"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_below="@+id/gridLayoutCash"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <ImageButton
            android:id="@+id/button0"
            android:layout_width="166dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/calc_0"
            android:layout_marginRight="3dp"
            android:textSize="25sp"/>

        <ImageButton
            android:id="@+id/buttonDot"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@+id/button3"
            android:layout_alignParentBottom="true"
            android:src="@drawable/calc_dot"
            android:paddingBottom="30dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/buttonEnter"
            android:layout_width="82dp"
            android:layout_height="130dp"
            android:layout_alignLeft="@+id/buttonX"
            android:layout_alignParentBottom="true"
            android:src="@drawable/calc_ok"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button0"
            android:layout_alignParentLeft="true"
            android:src="@drawable/calc_1"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button0"
            android:layout_toRightOf="@+id/button1"
            android:src="@drawable/calc_2"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button0"
            android:layout_toRightOf="@+id/button2"
            android:src="@drawable/calc_3"
            android:layout_marginBottom="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:src="@drawable/calc_4"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button5"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button2"
            android:layout_toRightOf="@+id/button1"
            android:src="@drawable/calc_5"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textSize="25sp" />
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button3"
            android:layout_toRightOf="@+id/button5"
            android:src="@drawable/calc_6"
            android:layout_marginBottom="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button7"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentLeft="true"
            android:src="@drawable/calc_7"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button5"
            android:layout_toRightOf="@+id/button7"
            android:src="@drawable/calc_8"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/button9"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_above="@+id/button6"
            android:layout_toRightOf="@+id/button8"
            android:src="@drawable/calc_9"
            android:layout_marginBottom="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/buttonC"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_alignLeft="@+id/buttonX"
            android:layout_alignTop="@+id/button9"
            android:layout_above="@+id/buttonX"
            android:src="@drawable/calc_back"
            android:layout_marginBottom="3dp"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/buttonX"
            android:layout_width="82dp"
            android:layout_height="64dp"
            android:layout_below="@+id/button9"
            android:layout_toRightOf="@+id/button6"
            android:src="@drawable/cac_x"
            android:layout_marginLeft="3dip"
            android:textSize="25sp" />
    </RelativeLayout>


</RelativeLayout>
